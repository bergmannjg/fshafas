{
    "compilerOptions": {
        "skipLibCheck": true,
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "moduleResolution": "node",
        "noEmit": false,
        "strict": true,
        "target": "ES6",
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "outDir": "dist",
        "module": "ES2015",
        "sourceMap": true
    },
    "include": [
        "./*"
    ]
}